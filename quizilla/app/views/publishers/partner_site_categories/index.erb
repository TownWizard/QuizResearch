<a href="/publishers/partner_site_categories/new">Create a new Partner Site Category</a>
<div class="site_list">
  <table border="1">
      <tr>
        <td>Partner Site Category</td>
        <td>Partner Site</td>
        <%= "<td>Partner Name</td>" if current_user.has_role? 'admin' %>
        <td>Quiz Categories</td>
        <td></td>
        <td></td>
      </tr>
     <% @partner_site_category.each do |pc| %>
      <tr>
        <td><%= pc.name %></td>
        <td><%= pc.partner_site.display_name %></td>
        <%= "<td>#{pc.partner_site.partner.name}</td>" if current_user.has_role? 'admin' %>
        <td>
          <% pc.quiz_categories.each do |qc| %>
            <%=qc.name %><br>
          <%end%>
        </td>
        <td>
          <a href="/publishers/partner_site_categories/edit/<%= pc.id %> ">Edit</a>
        </td>
        <td>
          <%= link_to 'Share Quiz Categories', show_quiz_categories_publishers_partner_site_category_path(pc) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
