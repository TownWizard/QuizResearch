<br />
<% form_for [ :publishers, @survey ] do |f| %>
  <table>
    <tr>
      <td><%= f.label :reward_interstitial, "Enter the Reward Interstitial of your new survey:" %></td>
      <td><%= f.text_field :reward_interstitial %></td>
    </tr><tr>
      <td><%= f.label :reward_url, "Enter the Reward URL:" %></td>
      <td><%= f.text_field :reward_url %></td>
    </tr><tr>
      <td><%= f.label( :quiz_id,  "Select a quiz:" ) %></td>
      <td><%= f.select( :quiz_id, @quizzes.collect{ |q| [ q.name, q.id ] }) %></td>
    </tr><tr>
    </tr><tr>
      <td><%= f.label( :has_landing_page,  "Has landing page?:" ) %></td>
      <td>Yes: <%= f.radio_button :has_landing_page, true %> &nbsp;No: <%= f.radio_button :has_landing_page, false %></td>
    </tr><tr>
      <td colspan="2"><input type="submit" name="submit" value="Submit Survey" /></td>
    </tr>
  </table>
<% end %>